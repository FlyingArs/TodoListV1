<%- include ../partials/header.ejs %>

    <main>
        <h1>Update Contact List</h1>
        <form method="post">
            <fieldset class="form-group">
                <label for="name" class="col-sm-2">Name</label>
                <input type="text" name="name" required value="<%= contact.name %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="number" class="col-sm-2">Contact Number</label>
                <input type="text" name="number" required value="<%= contact.number %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="email" class="col-sm-2">Email Address</label>
                <input type="text" name="email" required value="<%= contact.email %>" />
            </fieldset>
            <button type="submit" class="col-sm-offset-3 btn btn-primary">Update</button>
            <a href="/contacts/delete/<%= contact._id %>" title="Delete" onclick="return confirm('Do you really want to delete this?');">
                <button type="button" class="btn btn-danger">Delete</button>
            </a>
            <a href="/contacts/cancel">
                <button>Cancel</button>
            </a>
        </form>
    </main>